using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

class Program
{
    static void Main(string[] args)
    {
        ConsoleKeyInfo key = Console.ReadKey(); //describes key pressed, including modifier key pressed with it
        Console.WriteLine();
        Console.WriteLine("Character entered: " + key.KeyChar); //gets unicode character from ConsoleKeyInfo
        Console.WriteLine("Special keys: " + key.Modifiers); //gets modifer key from ConsoleKeyInfo
        Console.ReadLine();
        
    }
}
